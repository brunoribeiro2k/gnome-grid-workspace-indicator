<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.gsi" path="/org/gnome/shell/extensions/gsi/">
    <!-- Grid settings -->
    <key name="grid-visible" type="b">
      <default>false</default>
      <summary>Show grid lines</summary>
      <description>Whether to show grid lines between workspaces</description>
    </key>
    <key name="grid-color" type="s">
      <default>'rgba(255, 255, 255, 1)'</default>
      <summary>Grid color</summary>
      <description>Color of the grid lines (if visible)</description>
    </key>
    
    <!-- Cell settings -->
    <key name="cell-shape" type="s">
      <default>'circle'</default>
      <summary>Cell shape</summary>
      <description>Shape of workspace cells (circle or square)</description>
      <choices>
        <choice value="circle"/>
        <choice value="square"/>
      </choices>
    </key>
    <key name="cell-size" type="i">
      <default>65</default>
      <summary>Cell size</summary>
      <description>Size of cells as percentage of available space</description>
    </key>

    <!-- Theme settings -->
    <key name="inactive-fill" type="s">
      <default>'rgba(128, 128, 128, 0.5)'</default>
      <summary>Inactive cell fill color</summary>
    </key>
    <key name="active-fill" type="s">
      <default>'rgba(255, 255, 255, 1)'</default>
      <summary>Active cell fill color</summary>
    </key>
    <key name="apps-outline-color" type="s">
      <default>'rgba(255, 255, 255, 1)'</default>
      <summary>Apps outline color</summary>
      <description>Outline color applied to cells with apps.</description>
    </key>
    <key name="apps-outline-thickness" type="i">
      <default>1</default>
      <summary>Apps outline thickness</summary>
      <description>Outline thickness applied to cells with apps (0=none, 1=medium, 3=thick). Integer values represent pixels.</description>
    </key>
    <key name="outline-active" type="b">
      <default>true</default>
      <summary>Apply outline to active workspace</summary>
      <description>Whether to show outline on the active workspace regardless of apps</description>
    </key>

    <!-- Logging settings -->
    <key name="log-debug" type="b">
      <default>false</default>
      <summary>Enable Debug Logging</summary>
      <description>Enable debug level logs.</description>
    </key>
  </schema>
</schemalist>